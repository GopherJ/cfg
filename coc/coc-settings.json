{
    "languageserver": {
        "dls": {
            "enable": false,
            "command": "diagnostic-languageserver",
            "args": ["--stdio", "--log-level", "2"],
            "filetypes": ["c"],
            "initializationOptions": {
                "linters": {
                    "cppcheck": {
                        "command": "cppcheck",
                        "args": [
                            "--enable=performance,warning,portability,information",
                            "--language=c",
                            "%file"
                        ],
                        "sourceName": "cppcheck",
                        "debounce": 100,
                        "isStderr": true,
                        "isStdout": false,
                        "offsetLine": 0,
                        "offsetColumn": 0,
                        "formatPattern": [
                            "^[^ ]+:(\\d*):(\\d+):\\s+([^:]+):\\s+(.+)$",
                            {
                                "line": 1,
                                "message": 4,
                                "security": 3
                            }
                        ],
                        "securities": {
                            "note": "info",
                            "warning": "error"
                        }
                    },
                    "shellcheck": {
                        "command": "shellcheck",
                        "rootPatterns": [],
                        "isStdout": true,
                        "isStderr": false,
                        "debounce": 100,
                        "args": [ "--format=gcc", "-"],
                        "offsetLine": 0,
                        "offsetColumn": 0,
                        "sourceName": "shellcheck",

                        "formatLines": 1,
                        "formatPattern": [
                            "^([^:]+):(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
                            {
                                "sourceName": 1,
                                "sourceNameFilter": true,


                                "line": 2,
                                "column": 3,
                                "endLine": 2,
                                "endColumn": 3,
                                "message": [5],
                                "security": 4
                            }
                        ]
                    },
                    "filetypes": {
                        "c": ["cppcheck"],
                        "sh": ["shellcheck"]
                    },
                    "formatters": {},
                    "formatFiletypes": {}
                },
                "trace.server": "verbose"
            }
        },
        "kotlin": {
            "command": "~/kotlin-language-server/server/bin/kotlin-language-server",
            "filetypes": ["kotlin"]
        }
    },
    "coc.preferences.formatOnSaveFiletypes": [
        "json",
        "javascript",
        "typescript",
        "dart",
        "go",
        "cpp",
        "c",
        "rust",
        "toml"
    ],
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.preferences.colorSupport": true,
    "coc.preferences.maxFileSize": "102400",
    "suggest.noselect": false,
    "vetur.format.defaultFormatter.html": "prettier",
    "vetur.format.options.tabSize": 4,
    "diagnostic.messageTarget": "float",
    "diagnostic.virtualText": false,
    "diagnostic.messageDelay": 200,
    "diagnostic.checkCurrentLine": true,
    "codeLens.enable": true,
    "codeLens.separator": " ",
    "codeLens.subseparator": " | ",
    "rust-analyzer.inlayHints.chainingHints": true,
    "rust-analyzer.diagnostics.disabled": ["inactive-code"],
    "rust-analyzer.diagnostics.enableExperimental":true,
    "rust-analyzer.updates.channel": "nightly",
    "rust-analyzer.procMacro.enable": true,
    "rust-analyzer.inlayHints.refreshOnInsertMode": false,
    "rust-analyzer.checkOnSave.enable": true,
    "rust-analyzer.cargo.loadOutDirsFromCheck": true,
    "rust-analyzer.lens.enable": true,
    "rust-analyzer.lens.run": true,
    "rust-analyzer.lens.methodReferences": true,
    "rust-analyzer.hoverActions.linksInHover": true,
    "rust-analyzer.lens.implementations": true,
    "rust-analyzer.completion.postfix.enable": true,
    "go.goplsOptions": {
        "completeUnimported": true
    },
    "go.disable": {
        "workspaceFolders": false
    },
    "clangd.enabled": true,
    "clangd.semanticHighlighting": false,
    "prettier.singleQuote": false,
    "prettier.trailingComma": "es5",
    "prettier.tabWidth": 4,
    "prettier.semi": true,
    "prettier.useTabs": true,
    "prettier.bracketSpacing": true,
    "prettier.disableLanguages": [],
    "prettier.eslintIntegration": true,
    "explorer.previewAction.onHover": false,
    "explorer.width": 30,
    "explorer.file.showHiddenFiles": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.icon.enableVimDevicons": true,
    "explorer.openAction.select.filter": {
        "buftypes": ["terminal"],
        "filetypes": ["vista_kind", "qf", "minimap"],
        "floatingWindows": true
    },
    "git.addGBlameToVirtualText": false,
    "git.addGBlameToBufferVar": false,
    "git.showCommitInFloating": true,
    "git.addedSign.hlGroup": "GitGutterAdd",
    "git.changedSign.hlGroup": "GitGutterChange",
    "git.removedSign.hlGroup": "GitGutterDelete",
    "git.topRemovedSign.hlGroup": "GitGutterDelete",
    "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
    "eslint.run": "onSave",
    "eslint.filetypes": ["javascript", "typescript", "vue"]
}
