{
    "languageserver": {
        "kotlin": {
            "command": "~/kotlin-language-server/server/bin/kotlin-language-server",
            "filetypes": ["kotlin"]
        }
    },
    "coc.preferences.formatOnSaveFiletypes": [
        "json",
        "jsonc",
        "javascript",
        "typescript",
        "markdown",
        "dart",
        "go",
        "cpp",
        "c",
        "rust",
        "toml",
        "yaml",
        "cmake"
    ],
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.preferences.colorSupport": true,
    "coc.preferences.maxFileSize": "1MB",
    "coc.preferences.promptWorkspaceEdit": false,
    "coc.preferences.enableMarkdown": true,
    "suggest.noselect": false,
    "suggest.triggerCompletionWait": 100,
    "vetur.ignoreProjectWarning": true,
    "vetur.format.defaultFormatter.html": "prettier",
    "vetur.format.options.tabSize": 4,
    "vetur.trace.server": "off",
    "diagnostic.enableHighlightLineNumber": false,
    "diagnostic.enableMessage": "jump",
    "diagnostic.messageTarget": "float",
    "diagnostic.virtualText": false,
    "diagnostic.messageDelay": 200,
    "diagnostic.level": "warning",
    "diagnostic.checkCurrentLine": false,
    "diagnostic.virtualTextLineSeparator": ". ",
    "codeLens.enable": true,
    "codeLens.separator": " ",
    "codeLens.subseparator": " | ",
    "tsserver.trace.server": "off",
    "tsserver.disableAutomaticTypeAcquisition": true,
    /* "rust-analyzer.server.path": "~/.cargo/bin/rust-analyzer", */
    "rust-analyzer.inlayHints.chainingHints": true,
    "rust-analyzer.assist.importPrefix": "by_crate",
    "rust-analyzer.diagnostics.disabled": ["inactive-code"],
    "rust-analyzer.diagnostics.enableExperimental": false,
    "rust-analyzer.updates.channel": "stable",
    "rust-analyzer.procMacro.enable": true,
    "rust-analyzer.inlayHints.refreshOnInsertMode": false,
    "rust-analyzer.updates.prompt": false,
    "rust-analyzer.checkOnSave.enable": true,
    "rust-analyzer.lens.enable": true,
    "rust-analyzer.lens.run": true,
    "rust-analyzer.lens.methodReferences": false,
    "rust-analyzer.hoverActions.linksInHover": true,
    "rust-analyzer.checkOnSave.allTargets": true,
    "rust-analyzer.lens.implementations": true,
    "rust-analyzer.completion.postfix.enable": true,
    "rust-analyzer.trace.server": "off",
    "rust-analyzer.debug.runtime": "vimspector",
    "rust-analyzer.debug.vimspector.configuration.name": "rust - launch",
    "rust-analyzer.terminal.startinsert": true,
    "rust-analyzer.completion.autoimport.enable": false,
    "rust-analyzer.rustfmt.enableRangeFormatting": true,
    "go.goplsOptions": {
        "completeUnimported": true
    },
    "go.disable": {
        "workspaceFolders": false
    },
    "go.trace.server": "off",
    "clangd.enabled": true,
    "clangd.semanticHighlighting": false,
    "clangd.arguments": ["--header-insertion=never"],
    "yank.highlight.enable": false,
    "snippets.enableStatusItem": false,
    "prettier.singleQuote": true,
    "prettier.trailingComma": "es5",
    "prettier.tabWidth": 4,
    "prettier.semi": false,
    "prettier.useTabs": false,
    "prettier.bracketSpacing": true,
    "prettier.disableLanguages": [],
    "prettier.eslintIntegration": false,
    "explorer.previewAction.onHover": false,
    "explorer.width": 30,
    "explorer.file.showHiddenFiles": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.icon.enableVimDevicons": true,
    "explorer.openAction.select.filter": {
        "buftypes": ["terminal"],
        "filetypes": ["vista_kind", "qf", "minimap"],
        "floatingWindows": true
    },
    "explorer.keyMappings.global": {
        "<leader>k": ["wait", "markPrev:diagnosticError"],
        "<leader>j": ["wait", "markNext:diagnosticError"],

        "<leader>K": ["wait", "markPrev:diagnosticWarning"],
        "<leader>J": ["wait", "markNext:diagnosticWarning"],

        "f": "searchRecursive",
        "F": "searchRecursive",

        "d": "delete",
        "D": "deleteForever",

        ";k": ["wait", "markPrev:gitUnstaged"],
        ";j": ["wait", "markNext:gitUnstaged"],

        ">>": "gitStage",
        "<<": "gitUnstage"
    },
    "git.addGBlameToVirtualText": false,
    "git.addGBlameToBufferVar": true,
    "git.showCommitInFloating": false,
    "git.splitWindowCommand": "tab",
    "git.addedSign.hlGroup": "GitGutterAdd",
    "git.changedSign.hlGroup": "GitGutterChange",
    "git.removedSign.hlGroup": "GitGutterDelete",
    "git.topRemovedSign.hlGroup": "GitGutterDelete",
    "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
    "eslint.run": "onSave",
    "toml.formatter.reorderKeys": true,
    "toml.formatter.alignEntries": true,
    "yaml.schemaStore.enable": true,
    "tabnine.priority": 80,
    "tabnine.disable_filetypes": [
        "html",
        "markdown",
        "vim",
        "jsonc",
        "toml",
        "yaml"
    ]
}
