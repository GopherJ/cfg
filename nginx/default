server {
    listen 80;
    server_name www.alexcj96.com;
    rewrite ^(.*) https://$server_name$1 permanent;
}

upstream alexcj96 {
        server 127.0.0.1:8080;
}

server {
        listen 443 ssl;
        listen [::]:443 ssl;
        # sudo certbot certonly --standalone -d 'www.alexcj96.com'
        # crontab -e
        # 0  0 1 */2 0 systemctl stop nginx; /usr/bin/certbot renew; systemctl restart nginx
        ssl_certificate   /etc/letsencrypt/live/www.alexcj96.com/fullchain.pem;
        ssl_certificate_key   /etc/letsencrypt/live/www.alexcj96.com/privkey.pem;

        server_name www.alexcj96.com;

        location / {
            try_files /nonexistent @$http_upgrade;
        }

        location @websocket {
                # switch off logging
                access_log off;

                # redirect all HTTP traffic to localhost:8080
                proxy_pass http://alexcj96;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header Host $host;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

                # WebSocket support (nginx 1.4)
                proxy_http_version 1.1;
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection "upgrade";
                proxy_read_timeout 86400;
                #proxy_redirect off;
        }

        location @ {
                # switch off logging
                access_log off;

                proxy_pass http://alexcj96;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header Host $host;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }
}
