{
    "adapters": {
        "lldb": {
            "name": "lldb",
            "command": [
                "lldb",
                "-b",
                "-O",
                "command script import '${HOME}/.vscode-oss/extensions/debugAdapters/OpenDebugAD7",
                "-O",
                "script adapter.main.run_stdio_session()"
            ]
        }
    },
    "configurations": {
        "simple_rust - launch": {
            "adapter": "vscode-cpptools",
            "configuration": {
                "name": "LLDB: Launch",
                "type": "cppdbg",
                "request": "launch",
                "cwd": "${workspaceRoot}",
                "args": [],
                "program": "${workspaceRoot}/target/debug/main",
                "stopAtEntry": true,
                "externalConsole": true
            }
        }
    }
} 
