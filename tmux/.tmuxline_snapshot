# This tmux statusbar config was created by tmuxline.vim
# on Sun, 05 Jan 2020

set -g status-justify "centre"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=colour145,bg=colour16"
set -g status-right-style "none"
set -g pane-active-border-style "fg=colour114"
set -g status-style "none,bg=colour16"
set -g message-style "fg=colour145,bg=colour16"
set -g pane-border-style "fg=colour16"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none,fg=colour114,bg=colour16"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=colour145,bg=colour16"
set -g status-left "#[fg=colour16,bg=colour114,none] #S #[fg=colour114,bg=colour16,nobold,nounderscore,noitalics]#[fg=colour145,bg=colour16,none] #W #[fg=colour16,bg=colour16,nobold,nounderscore,noitalics]#[fg=colour145,bg=colour16] #H #[fg=colour16,bg=colour16,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour16,bg=colour16,nobold,nounderscore,noitalics]#[fg=colour145,bg=colour16] %a #[fg=colour16,bg=colour16,nobold,nounderscore,noitalics]#[fg=colour145,bg=colour16] #W %R #[fg=colour114,bg=colour16,nobold,nounderscore,noitalics]#[fg=colour16,bg=colour114] #H "
setw -g window-status-format "#[fg=colour16,bg=colour16,nobold,nounderscore,noitalics]#[default] #I #W #[fg=colour16,bg=colour16,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour16,bg=colour16,nobold,nounderscore,noitalics]#[fg=colour145,bg=colour16,none] #I #W #[fg=colour16,bg=colour16,nobold,nounderscore,noitalics]"
